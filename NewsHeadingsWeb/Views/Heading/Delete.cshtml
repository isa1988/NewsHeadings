@model NewsHeadingsWeb.Models.HeadingModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

<h3>Вы уверены что хотите удалить?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <p></p>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (Model.ErrorMessage != null && Model.ErrorMessage != string.Empty)
        {
            <div class="form-group">
                <p class="text-danger"> Ошибка: @Model.ErrorMessage </p>
            </div>
        }
        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-success" /> |
            <a href="/News/Show" class="btn btn-success">Назад</a>
        </div>
    }
</div>
